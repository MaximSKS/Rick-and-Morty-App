<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="12dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/character_imageView"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/rick_morty_splash_image" />


            <TextView
                android:id="@+id/character_nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:text="Character Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/character_speciesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:text="Species"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/character_statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:text="Status"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/character_genderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:text="Gender"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>


